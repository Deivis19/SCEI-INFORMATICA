/* --- LOGOUT BUTTON PREMIUM --- */
QPushButton#SidebarLogout {
    background: rgba(15, 23, 42, 0.4);
    border: 1px solid #1E293B;
    border-radius: 12px;
    padding: 12px 16px;
    color: #94A3B8;
    text-align: left;
    font-weight: 600;
    margin-top: 10px;
}

QPushButton#SidebarLogout:hover {
    background: rgba(239, 68, 68, 0.15); /* Red tint 500 */
    color: #F87171; /* Red 400 */
    border: 1px solid rgba(239, 68, 68, 0.4);
}

QPushButton#SidebarLogout:pressed {
    background: rgba(239, 68, 68, 0.25);
}

/* --- SIDEBAR & MODULE NAV PREMIUM --- */
QToolButton[class~='sidebar-btn'] {
    background: transparent;
    color: #94A3B8;
    font-size: 14px;
    font-weight: 500;
    text-align: left;
    padding: 12px 16px;
    border-radius: 12px;
    border: 1px solid transparent;
    margin: 2px 8px;
}

QToolButton[class~='sidebar-btn']:hover {
    background: rgba(30, 41, 59, 0.4);
    color: #F8FAFC;
    border: 1px solid rgba(56, 189, 248, 0.1);
}

QToolButton[class~='sidebar-btn']:checked {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0, stop:0 rgba(14, 165, 233, 0.15), stop:1 transparent);
    color: #38BDF8;
    border-left: 3px solid #38BDF8;
    font-weight: 600;
}

QToolButton[class~='module-nav-btn'] {
    background: rgba(15, 23, 42, 0.4);
    color: #94A3B8;
    border: 1px solid #1E293B;
    border-radius: 12px;
    padding: 8px 16px;
    font-size: 13px;
    min-height: 38px;
}

QToolButton[class~='module-nav-btn']:hover {
    background: rgba(30, 41, 59, 0.6);
    color: #E2E8F0;
    border: 1px solid #334155;
}

QToolButton[class~='module-nav-btn']:checked {
    background: rgba(14, 165, 233, 0.15);
    border: 1px solid #0EA5E9;
    color: #38BDF8;
    font-weight: 600;
}


/* --- FIX POPUPS (QMenu & QComboBox) --- */
QComboBox QAbstractItemView {
    background-color: #1E293B;
    border: 1px solid #475569;
    color: #E2E8F0;
    selection-background-color: #334155;
    selection-color: white;
    outline: 0;
    padding: 4px;
}

QMenu {
    background-color: #1E293B;
    border: 1px solid #475569;
    color: #E2E8F0;
    border-radius: 8px;
    padding: 6px;
}

QMenu::item {
    padding: 8px 24px;
    border-radius: 4px;
    background-color: transparent; /* Fix phantom background */
}

QMenu::item:selected {
    background-color: #334155;
    color: white;
}

/* --- FIX CALENDAR POPUP --- */
QCalendarWidget QWidget {
    background-color: #1E293B;
    color: #E2E8F0;
}

QCalendarWidget QToolButton {
    color: #E0F2FE;
    background-color: transparent;
    icon-size: 18px;
    border-radius: 4px;
    margin: 2px;
}

QCalendarWidget QToolButton:hover {
    background-color: #334155;
}

QCalendarWidget QMenu {
    background-color: #1E293B;
    color: #E2E8F0;
    border: 1px solid #475569;
}

QCalendarWidget QSpinBox {
    background-color: #0F172A;
    color: white;
    border: 1px solid #334155;
    border-radius: 4px;
}

QCalendarWidget QAbstractItemView:enabled {
    background-color: #1E293B;
    color: #E2E8F0;
    selection-background-color: #3B82F6;
    selection-color: white;
    outline: 0;
}

QCalendarWidget QAbstractItemView:disabled {
    color: #64748B;
}
